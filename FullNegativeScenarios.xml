<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="RestfulBooker E2E Suite" verbose="1" preserve-order="true">
    <listeners>
        <!-- Allure TestNG listener -->
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="Full Negative Tests">
        <classes>
            <class name="com.restfulBooker.negativeScenarios.InvalidAuthToken"/>

            <class name="com.restfulBooker.negativeScenarios.InvalidBooking"/>
        </classes>
    </test>
</suite>
