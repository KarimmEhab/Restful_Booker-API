<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="RestfulBooker E2E Suite" verbose="1" preserve-order="true">
    <listeners>
        <!-- Allure TestNG listener -->
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="E2E Test">
        <classes>
            <class name="com.restfulBooker.positiveScenarios.HealthCheck"/>

            <class name="com.restfulBooker.positiveScenarios.AuthToken"/>

            <class name="com.restfulBooker.positiveScenarios.CreateBooking"/>

            <class name="com.restfulBooker.positiveScenarios.GetBookingById"/>

            <class name="com.restfulBooker.positiveScenarios.UpdateBooking"/>

            <class name="com.restfulBooker.positiveScenarios.PartialUpdateBooking"/>

            <class name="com.restfulBooker.positiveScenarios.DeleteBooking"/>

            <class name="com.restfulBooker.positiveScenarios.GetBookingAfterDelete"/>

        </classes>
    </test>
</suite>
